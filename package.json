{
  "name": "storyblok-augmented-image",
  "description": "A Storyblok Field-Type Plugin Project",
  "author": "Markus Oberlehner",
  "scripts": {
    "watchify": "watchify -vd -p [ browserify-livereload --host 127.0.0.1 --port 1337 ] -e src/vendor/main.js -o dist/build.js",
    "serve": "http-server -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify src/vendor/export.js > dist/export.js",
    "lint:scripts": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:styles": "stylelint 'src/**/*.+(scss|vue)'",
    "lint": "yarn run lint:scripts && yarn run lint:styles"
  },
  "dependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@avalanche/eslint-config": "^2.0.0",
    "@avalanche/stylelint-config": "^0.1.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "browserify-livereload": "^1.0.10",
    "cross-env": "^5.2.0",
    "ecstatic": "^3.2.0",
    "eslint": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-vue": "^4.5.0",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.3.0",
    "uglify-js": "^3.4.3",
    "vueify": "^9.4.1",
    "watchify": "^3.11.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  }
}
